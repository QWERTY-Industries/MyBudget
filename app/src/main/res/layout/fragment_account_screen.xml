<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".AccountScreenFrag">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_2"
        app:srcCompat="@drawable/account_circle_pink_3"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:textColor="@color/medium_slate_blue"
        android:drawableStart="@drawable/account_circle_pink"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:text="First Name"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:textColor="@color/medium_slate_blue"
        android:drawableStart="@drawable/account_circle_pink"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:text="Last Name"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:textColor="@color/medium_slate_blue"
        android:drawableStart="@drawable/ic_alternate_email"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:text="@string/e_mail"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="428dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:textColor="@color/medium_slate_blue"
        android:drawableStart="@drawable/account_circle_pink"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:text="Username"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="513dp" />

    <Button
        android:id="@+id/btnUpdateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Update Info"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="660dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:background="@drawable/custom_button_2"
        android:text="Back"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>