<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ReporterFrag">


    <EditText
        android:id="@+id/etUserfirstValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/pastel_pink_50"
        android:ems="10"
        android:hint="1st value"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/pastel_pink"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toStartOf="@+id/etUserSecondValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategoryContainer" />

    <EditText
        android:id="@+id/etUserSecondValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/pastel_pink_50"
        android:ems="10"
        android:hint="2nd value"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/pastel_pink"
        app:layout_constraintBottom_toBottomOf="@+id/etUserfirstValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etUserfirstValue"
        app:layout_constraintTop_toTopOf="@+id/etUserfirstValue" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/Fandango_50"
        android:ems="10"
        android:hint="@string/answer"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/pastel_pink"
        app:layout_constraintBottom_toTopOf="@+id/btnAddition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserfirstValue" />

    <Button
        android:id="@+id/btnSubtraction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/custom_button"
        android:text="@string/subtraction"
        app:layout_constraintBottom_toTopOf="@+id/btnDivision"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiplication"
        app:layout_constraintStart_toEndOf="@+id/btnAddition"
        app:layout_constraintTop_toBottomOf="@+id/btnAddition" />

    <Button
        android:id="@+id/btnAddition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="83dp"
        android:background="@drawable/custom_button"
        android:text="@string/addition"
        app:layout_constraintBottom_toTopOf="@+id/btnSubtraction"
        app:layout_constraintEnd_toStartOf="@+id/btnSubtraction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <Button
        android:id="@id/btnBack"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/custom_button_2"
        android:text="@string/back"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCategoryContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLessThan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/custom_button"
        android:text="@string/less_than"
        app:layout_constraintBottom_toBottomOf="@+id/btnGreaterThan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGreaterThan"
        app:layout_constraintTop_toTopOf="@+id/btnGreaterThan" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="83dp"
        android:background="@drawable/custom_button"
        android:text="@string/Division"
        app:layout_constraintBottom_toTopOf="@+id/btnGreaterThan"
        app:layout_constraintEnd_toStartOf="@+id/btnGreaterThan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtraction" />

    <Button
        android:id="@+id/btnGreaterThan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/custom_button"
        android:text="@string/greater_than"
        app:layout_constraintBottom_toTopOf="@+id/equalTo"
        app:layout_constraintEnd_toStartOf="@+id/btnLessThan"
        app:layout_constraintStart_toEndOf="@+id/btnDivision"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision" />

    <Button
        android:id="@+id/equalTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/custom_button"
        android:text="@string/equalTo"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/btnGreaterThan"
        app:layout_constraintStart_toStartOf="@+id/btnGreaterThan"
        app:layout_constraintTop_toBottomOf="@+id/btnGreaterThan" />

    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/custom_button"
        android:text="@string/mutiplication"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSubtraction"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCategoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/pastel_pink"
        app:layout_constraintBottom_toTopOf="@+id/etUserfirstValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="87dp"
        android:background="@drawable/custom_button_2"
        android:text="Update information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalTo" />


</androidx.constraintlayout.widget.ConstraintLayout>