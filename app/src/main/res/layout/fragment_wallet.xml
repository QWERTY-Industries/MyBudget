<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top"
    tools:context=".WalletFrag">

    <!-- Back Button - ID is now unique -->
    <Button
        android:id="@+id/btnWalletBack"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="end"
        android:background="@drawable/custom_button_2"
        android:text="@string/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/racing_sans_one"
        android:text="@string/wallet"
        android:textColor="@color/pastel_pink"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- We use EditText so the user can input their balance -->
    <EditText
        android:id="@+id/etCashBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/racing_sans_one"
        android:hint="@string/cash_balance"
        android:textColorHint="@color/pastel_pink_50"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColor="@color/pastel_pink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etCardBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/racing_sans_one"
        android:hint="@string/card_balance"
        android:textColorHint="@color/pastel_pink_50"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColor="@color/pastel_pink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSavingsBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/racing_sans_one"
        android:hint="@string/savings_balance"
        android:textColorHint="@color/pastel_pink_50"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColor="@color/pastel_pink"
        android:textSize="20sp" />
    <!-- NEW: TextView to display the total balance with currency -->
    <TextView
        android:id="@+id/tvTotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/racing_sans_one"
        android:textColor="@color/pastel_pink"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Total: R1,250.75" />

    <Button
        android:id="@+id/btnUpdateWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_2"
        android:text="@string/update_wallet"
        android:textSize="18sp" />

</LinearLayout>