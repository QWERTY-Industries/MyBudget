<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@android:color/transparent"
    tools:context=".WalletFrag">

    <Button
        android:id="@id/btnBack"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:background="@drawable/custom_button_2"
        android:text="@string/back"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="top"
        android:text="@string/wallet"
        android:textColor="@color/pastel_pink"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCurrentBalance"
        android:layout_width="375dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:drawablePadding="12dp"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:padding="12dp"
        android:text="Cash:"
        android:textAlignment="textStart"
        android:textColor="@color/medium_slate_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalSpent"
        android:layout_width="375dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:drawablePadding="12dp"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:padding="12dp"
        android:text="Card:"
        android:textAlignment="textStart"
        android:textColor="@color/medium_slate_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalIncome"
        android:layout_width="375dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/medium_slate_blue"
        android:drawablePadding="12dp"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:padding="12dp"
        android:text="savings:"
        android:textAlignment="textStart"
        android:textColor="@color/medium_slate_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_2"
        android:text="Update Info"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="16dp" />


</LinearLayout>